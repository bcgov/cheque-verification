{
  "name": "cheque-verification-backend",
  "version": "1.0.0",
  "description": "Backend service for cheque verification frontend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=lcov --ci",
